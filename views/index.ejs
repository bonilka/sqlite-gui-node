<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/baseHead', {basePath, title: 'Home', js: ['home.js', 'pagination.js']}); %>
  </head>
  <body>
    <div class="page_body">
      <div class="sidebar">
        <h1 style="text-align: center; color: white;" class="form-label fs-4 text">SQLite GUI</h1>
        <a style="text-decoration: none" href="<%= basePath %>/createtable">
          <div class="sidebar_table_div_btn">
            <button class="create_btn">Create</button>
          </div>
        </a>
      </div>

      <div class="right_side">
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
          <div class="container-fluid">
            <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav">
                <li class="nav-item">
                  <a class="nav-link active" aria-current="page" href="<%= basePath %>/query">  <button type="button" class="btn btn-primary" data-bs-toggle="button">Custom query</button>
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link active" aria-current="page">  <button style="opacity: 0.4; cursor: not-allowed; pointer-events: none;" type="button" class="btn btn-primary" data-bs-toggle="button">Import database</button>
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link active" href="<%= basePath %>/output.sql" aria-current="page">  <button type="button" id="export_db" class="btn btn-primary" data-bs-toggle="button">Export database</button>
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </nav>
        <div class="main_body">
          <div
            style="
              height: 70vh;
              width: 100%;
              display: flex;
              align-items: center;
              justify-content: center;
            "
          >
            <h1 style="align-items: center" class="form-label fs-1 text">
              Select Table to View it
            </h1>
        </div>
      </div>
      <div id="pagination_container"></div>
    </div>
  </body>
</html>
